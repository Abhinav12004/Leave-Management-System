# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000

# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit actual .env files with real credentials

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="Leave Management System"
APP_VERSION=1.0.0

# Database Configuration (Supabase)
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anonymous_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Test Database Configuration (for CI/CD and testing)
TEST_SUPABASE_URL=https://your-test-project-id.supabase.co
TEST_SUPABASE_ANON_KEY=your_test_anonymous_key_here

# Security Configuration
JWT_SECRET=your_very_long_random_jwt_secret_at_least_32_characters
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration (for notifications)
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=noreply@company.com
SMTP_PASS=secure_smtp_password_here
FROM_EMAIL=noreply@company.com

# Timezone and Localization
DEFAULT_TIMEZONE=UTC
DEFAULT_LOCALE=en-US

# Business Rules Configuration
MAX_LEAVE_DAYS_PER_REQUEST=30
MIN_ADVANCE_NOTICE_DAYS=1
MAX_ADVANCE_BOOKING_DAYS=365
ALLOW_SELF_APPROVAL=false

# Feature Flags
FEATURE_HOLIDAY_CALCULATION=true
FEATURE_BULK_APPROVALS=false
FEATURE_MOBILE_NOTIFICATIONS=false
FEATURE_ADVANCED_REPORTING=false

# API Documentation
SWAGGER_ENABLED=true
API_DOCS_PASSWORD=change_this_secure_password

# Development Only Settings
DEBUG_SQL=false
MOCK_EMAIL_SENDING=true
SKIP_AUTH_IN_DEV=false

# Example values (replace with your actual Supabase credentials):
# SUPABASE_URL=https://vecgozfoxmnmjdealupi.supabase.co
# SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Note: Never commit your actual .env file to version control!
# The .env file should contain your real credentials and is gitignored.
